<?xml version="1.0"?>
<!--
NOTE: 
  -Always use absolute path so that you can run JWM from any path.
  -${GV_CLD_ROOT_DIR} = /root/cld/
  -Compatible from jwm-2.3+.

JWM Themes Exchange: http://www.murga-linux.com/puppy/viewtopic.php?t=23260&start=30
DamnSmall Linux Sample Themes: http://www.damnsmalllinux.org/f/topic-3-34-19504-0.html
-->
<JWM>
  <StartupCommand>/root/cld/jwmrc-startup.sh</StartupCommand>
  
  <RootMenu height="15" onroot="12">
  
    <Program icon="terminal.png" label="Terminal">x-terminal-emulator</Program>
    <Separator/>
    
    <!-- INCLUDE custom menu. -->
    <Include>/root/cld/jwmrc-menus.xml</Include>
    <Separator/>
    
    <!-- INCLUDE Debian default menu. -->
    <Include>/etc/jwm/debian-menu</Include>
    <Separator/>
    
    <!-- INCLUDE shutdown menu. -->
    <Include>/root/cld/jwmrc-menu-shutdown.xml</Include>
    
  </RootMenu>

 
  <WindowStyle>
    <Foreground>black</Foreground>

    <Font>Arial-12</Font>
    <Width>3</Width>
    <Height>22</Height>     
    <Active>
      <Foreground>white</Foreground>
      <Background>#a8c5e9:#80a7d6</Background>
      <Outline>#97b8e2</Outline>
    </Active>

  </WindowStyle> 
  
  <!-- Behavior of tasklist/taskbar. -->
  

	<!-- PAGER PROPERTIES -->

	<PagerStyle>
		<Outline>grey</Outline>
		<Foreground>#a8c5e9</Foreground>
		<Background>#80a7d6</Background>
    <Active>
      <Background>#80a7d6</Background>
      <Foreground>#a8c5e9</Foreground>
    </Active>
  </PagerStyle>

  <PopupStyle>
      <Font>Sans-9</Font>
      <Outline>#000000</Outline>
      <Foreground>#000000</Foreground>
      <Background>#999999</Background>
  </PopupStyle>

	<MenuStyle>
		<Font>Arial-12</Font>
		<Foreground>black</Foreground>
		<Background>#F4F4F4</Background>
    <Active>
      <Background>#a8c5e9:#80a7d6</Background>
      <Foreground>white</Foreground>
    </Active>
  </MenuStyle>

  <!-- Tray at the bottom. -->
  <Include>/root/cld/jwmrc-tray.xml</Include>
  
  <!-- Double click speed (in milliseconds) -->
  <DoubleClickSpeed>400</DoubleClickSpeed>

  <!-- Double click delta (in pixels) -->
  <DoubleClickDelta>2</DoubleClickDelta>

  <!-- The focus model (sloppy or click).
    click: Focus will stay even mouse is elsewhere.-->
  <FocusModel>click</FocusModel>

  <!-- The snap mode (none, screen, or border) -->
  <SnapMode distance="10">border</SnapMode>
    
  <!-- The move mode (outline or opaque) -->
  <MoveMode>opaque</MoveMode>

  <!-- The resize mode (outline or opaque) -->
  <ResizeMode>opaque</ResizeMode>
    
  <!-- INCLUDE key bindings. -->
  <Include>/root/cld/jwmrc-key.xml</Include>
  
  <!-- INCLUDE icon paths. -->
  <Include>/root/cld/jwmrc-icon-paths.xml</Include>
    
</JWM>
